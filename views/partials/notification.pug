mixin notification(type, title, message, svgContent)
  - var bgColor, textColor, iconName;
  case type
    when 'success'
      - bgColor = 'bg-teal-100 border-teal-500 text-teal-900';
      - textColor = 'text-teal-500';
      - iconName = 'info-circle';
    when 'warning'
      - bgColor = 'bg-yellow-100 border-yellow-500 text-yellow-900';
      - textColor = 'text-yellow-500';
      - iconName = 'exclamation-triangle';
    when 'error'
      - bgColor = 'bg-red-100 border-red-500 text-red-900';
      - textColor = 'text-red-500';
      - iconName = 'times-circle';
    when 'info'
      - bgColor = 'bg-gray-100 border-gray-500 text-gray-900';
      - textColor = 'text-gray-500';
      - iconName = 'info-circle';

  div#notification-container(class=`${bgColor} border-t-4 rounded-b px-4 py-3 mb-4 shadow-md relative` hx-swap-oob="true" role="alert") 
    div(class="flex")
      div(class="py-1")!= svgContent
      div
        p(class="font-bold")= title
        p(class="text-sm")= message
      button(class=`notification-close absolute top-0 bottom-0 right-0 px-4 py-3`)
        svg(class=`fill-current h-6 w-6 ${textColor} cursor-pointer` role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20")
