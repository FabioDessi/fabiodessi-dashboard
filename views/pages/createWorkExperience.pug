extends ../layouts/base 

block content 
  h1(class="text-2xl font-bold mb-4") #{title}

  form(method="POST" action="/work-experiences/create" class="bg-white p-6 rounded shadow-md")
    div(class="mb-4")
      label(for="title" class="block text-sm font-medium text-gray-600 mb-2") Title
      input(type="text" name="title" class="w-full p-2 border rounded focus:border-blue-500 focus:outline-none")
    div(class="mb-4")
      label(for="title" class="block text-sm font-medium text-gray-600 mb-2") Title
      textarea(name="description", cols="30", rows="10" class="w-full p-2 border rounded focus:border-blue-500 focus:outline-none")
    div(class="mb-4")
      input(type="submit" value="submit" class="bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded")